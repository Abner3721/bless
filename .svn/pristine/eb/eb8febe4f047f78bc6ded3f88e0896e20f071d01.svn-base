<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <link rel="shortcut icon" href="favicon.ico"> <link href="__ADMIN__/css/bootstrap.min.css?v=3.3.6" rel="stylesheet">
    <link href="__ADMIN__/css/font-awesome.css?v=4.4.0" rel="stylesheet">
    <link href="__ADMIN__/css/animate.css" rel="stylesheet">
    <link href="__ADMIN__/css/plugins/summernote/summernote.css" rel="stylesheet">
    <link href="__ADMIN__/css/plugins/summernote/summernote-bs3.css" rel="stylesheet">
    <link href="__ADMIN__/css/style.css?v=4.1.0" rel="stylesheet">
    {include file="public/colors"}
    <style>
        .droppable-active {
            background-color: #ffe !important;
        }
        .tools a {
            cursor: pointer;
            font-size: 80%;
        }
        .form-body .col-md-6,
        .form-body .col-md-12 {
            min-height: 400px;
        }
        .draggable {
            cursor: move;
        }
    </style>
</head>
<body class="gray-bg">
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>{$alltitle}</h5>
                </div>
                <div class="ibox-content">
                    <form role="form" class="form-horizontal m-t">
                        <div class="form-group draggable">
                            <label class="col-sm-3 control-label">标题：</label>
                            <div class="col-sm-5">
                                <input type="text" name="title" class="form-control" value="{$info.title}"  placeholder="标题">
                            </div>
                        </div>
                        <div class="form-group draggable">
                            <label class="col-sm-3 control-label">描述：</label>
                            <textarea style="width: 40%;height: 70px;margin-left: 13px;border-color: #cfdadd" name="title_desc">{$info.title_desc}</textarea>
                        </div>
                        <div class="form-group draggable ">
                            <label class="col-sm-3 control-label">缩略图：</label>
                            <div class="col-sm-4">
                                {include file="common@discreteness/uploadone"}
                                {notempty name="info['imgurl']"}
                                <a target="_blank" href="{$info.imgurl}">点击查看图片</a>
                                {/notempty}
                            </div>
                        </div>
                        <div class="form-group draggable">
                            <label class="col-sm-3 control-label">远程图片链接：</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" name="url" value="{$info.imgurl}"  placeholder="图片链接">
                            </div>
                        </div>
                        <div class="form-group draggable">
                            <label class="col-sm-3 control-label">内容：</label>
                            <div class="col-sm-5">
                                {include file="common@discreteness/editor"}
                            </div>
                        </div>
                        <div class="form-group draggable">
                            <label class="col-sm-3 control-label">排序：</label>
                            <div class="col-sm-5">
                                <input type="text" name="sort" class="form-control" value="{$info.sort}"  placeholder="排序">
                            </div>
                        </div>
                        <div class="form-group draggable">
                            <label class="col-sm-3 control-label">状态：
                            </label>

                            <div class="col-sm-9">
                                <label class="radio-inline">
                                    <input type="radio" value="1" name="status" {eq name="info['status']" value="1"}checked="checked"{/eq}>开启</label>
                                <label class="radio-inline">
                                    <input type="radio"  value="0"  name="status" {eq name="info['status']" value="0"}checked="checked"{/eq}>关闭</label>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group draggable">
                            <div class="col-sm-12 col-sm-offset-3">
                                <button class="btn btn-primary btn-add" type="button">提交</button>
                                <button class="btn btn-white" type="button">取消</button>
                            </div>
                        </div>
                    </form>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>

</div>
<style type="text/css">
.hides{display: none;}
.shows{display: block}
</style>
<!-- 全局js -->
<script src="__ADMIN__/js/jquery.min.js?v=2.1.4"></script>

<script type="text/javascript">
    $(function () {
        $('.ui-draggable .col-sm-3 a').click(function () {
            $(this).addClass('hides').removeClass('shows');
            $(this).next('select').addClass('shows').removeClass('hides');
        })
    })
</script>
<script src="__ADMIN__/js/bootstrap.min.js?v=3.3.6"></script>
<!-- 自定义js -->
<script src="__ADMIN__/js/content.js?v=1.0.0"></script>
<!-- jQuery UI -->
<script src="__ADMIN__/js/jquery-ui-1.10.4.min.js"></script>
<!-- From Builder -->
<script src="__ADMIN__/js/plugins/beautifyhtml/beautifyhtml.js"></script>

<script src="__ADMIN__/js/plugins/layer/layer.min.js"></script>

<script>
    $(function () {
        $('.btn-white').click(function(){
            window.location.href = "{:url('Forum/index')}";
        });
        $('.btn-primary').click(function(){

            var content= UE.getEditor('content').getContent();
            var title_desc= $('textarea[name=title_desc]').val();
            var title= $('input[name=title]').val();
            var imgurl= $('input[name=imgurl]').val();
            var url= $('input[name=url]').val();
            var sort= $('input[name=sort]').val();
            var status=$("input[type=radio]:checked").val();
            if(title == null||title ==''){

                layer.alert('名称不能为空', {
                    icon: 0,
                    skin: 'layer-ext-moon'
                });
                return false;
            }else {
                $.ajax({
                    type: "POST",
                    url: "{:url('Forum/edit',array('id'=>$info['id']))}",
                    data: {title: title, url: url,imgurl:imgurl,status:status,sort:sort,title_desc:title_desc,content:content},
                    dataType: "json",
                    success: function (data) {
                        if (data.code == '200') {
                            layer.msg(data.msg, {
                                time:2000,icon: 6
                            },function(){
                                window.location.href="{:url('Forum/index')}";
                            });
                        } else {
                            layer.alert(data.msg, {
                                icon: 2,
                                skin: 'layer-ext-moon'
                            });
                            return false;
                        }

                    }
                });
            }
        });
    })
</script>

</body>

</html>
